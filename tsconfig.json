{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "2ra": ["./lib/main"],
      "2ra-ui/colors": ["./src/components/Colors/colors"]
    },
    "declaration": true,
    "declarationMap": true,  
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // "typeRoots": ["./build/index.d.ts"], // needs to check
  },
  "include": [
    "src",
    "lib"
  ],
}
